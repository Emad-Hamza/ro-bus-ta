{
    "openapi": "3.0.0",
    "info": {
        "title": "ro-bus-ta APIs",
        "version": "0.1"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/": {},
        "/bookings/book": {
            "post": {
                "tags": [
                    "booking"
                ],
                "summary": "Books a seat in a certain trip",
                "description": "Seats booking",
                "operationId": "7d7cec09309d714cd1344481ca29bab6",
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "trip_id": {
                                        "type": "integer",
                                        "example": "2"
                                    },
                                    "seat_id": {
                                        "type": "integer",
                                        "example": "3"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns a success message"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "login"
                ],
                "summary": "Authenticates customer and returns token.",
                "description": "Customer login",
                "operationId": "09e51bef15f4fca5d7375d2da57197f6",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "email",
                                        "example": "emad.aldin.hamza@gmail.com"
                                    },
                                    "password": {
                                        "type": "password",
                                        "example": "123456789"
                                    },
                                    "device_name": {
                                        "type": "string",
                                        "example": "self"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns a user token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "The provided credentials are incorrect."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Returns a error message",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The provided credentials are incorrect."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error/missing parameters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The provided credentials are incorrect."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/seats": {
            "get": {
                "tags": [
                    "seat"
                ],
                "summary": "Seats list",
                "description": "Display a listing of the resource.",
                "operationId": "877f572b9184d98e5e713dc7fe8420fb",
                "parameters": [
                    {
                        "name": "start_station_id",
                        "in": "query",
                        "required": false,
                        "style": "form",
                        "explode": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "enum": [
                                    1,
                                    2,
                                    3,
                                    4
                                ]
                            }
                        }
                    },
                    {
                        "name": "destination_station_id",
                        "in": "query",
                        "required": false,
                        "style": "form",
                        "explode": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "enum": [
                                    1,
                                    2,
                                    3,
                                    4
                                ]
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns list of Trip and its seats",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "trip_id": {
                                                "type": "integer"
                                            },
                                            "trip_name": {
                                                "type": "string"
                                            },
                                            "trip_seats": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer"
                                                        },
                                                        "created_at": {
                                                            "type": "string"
                                                        },
                                                        "updated_at": {
                                                            "type": "string"
                                                        },
                                                        "bus_id": {
                                                            "type": "integer"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/stations": {
            "get": {
                "tags": [
                    "station"
                ],
                "summary": "Stations list",
                "description": "Display a listing of the resource.",
                "operationId": "79f4a5c80596ae83a01b25712284f1b2",
                "responses": {
                    "200": {
                        "description": "Returns list of available stations for booking",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "station_id": {
                                                        "type": "integer"
                                                    },
                                                    "station_name": {
                                                        "type": "string"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "responses": {
            "401": {
                "description": "Returns a error message",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "The provided credentials are incorrect."
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    }
}